<!doctype html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>

	<!-- Basic Page Needs
  ================================================== -->
	<meta charset="utf-8" />
	<title>Rasberry</title>
	<meta name="description" content="">
	<meta name="author" content="">
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	
	<!-- Mobile Specific Metas
  ================================================== -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" /> 
	
	<!-- CSS
  ================================================== -->
  <%= stylesheet_link_tag :all %>
	
	<!-- Favicons
	================================================== -->
	<link rel="shortcut icon" href="/images/favicon.ico">
	<link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
	<link rel="apple-touch-icon" sizes="72x72" href="/images/apple-touch-icon-72x72.png" />
	<link rel="apple-touch-icon" sizes="114x114" href="/images/apple-touch-icon-114x114.png" />
	
  <!-- CSRF
	================================================== -->
   <%= csrf_meta_tag %>
</head>
<body>


	<div class="container">	

		<% if current_user.anonymous %>  
		
			<div id="login-status" class="offset-by-four eight columns">
				Not logged in. Temporary user id: <%= current_user.username %> 
			</div>
			
			<div id="register" class="two columns" style="text-align: right; height: 30px; padding-top: 10px; font-size: 14px;">
				<%= link_to "Register", new_user_path %>  
			</div>
		
			<div id="login" class="two columns">
        <%= link_to "Log in", login_path %>  
			</div>
			
		<% else %>  
		
			<div id="login-status" class="offset-by-four eight columns">
				Logged in as  <%= current_user.username %>
			</div>
			
			<div id="logout" class="two columns" style="text-align: right; height: 30px; padding-top: 10px; font-size: 14px;">
        <%= link_to "Logout", logout_path %>  
			</div>
		
			<div id="account" class="two columns">
        <%= link_to "Account", account_url %>  
			</div>
			
		<% end %>  
		
		<div class="sixteen columns">
			<h2 style="margin-top: 40px"><a href="/">Rasberry</a></h1>
			<hr />
		</div>
    
		<div class="sixteen columns">
      <%= yield %>
    </div>

	</div><!-- container -->

		
	<!-- JS
	================================================== -->
  <%= javascript_include_tag :defaults %>

</body>
</html>