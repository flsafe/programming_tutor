<div class="row sixteen columns">
  <h3><%= exercise.title %></h3>
  <p>
    <%= exercise.description %>
  </p>
  <%= button_to 'Start Exercise', start_coding_path(exercise),  :class => "button", :method=>:post%>
  <% if current_user.admin? %>
    <%= link_to 'Show', exercise, :class => "button" %>
    <%= link_to 'Edit', edit_exercise_path(exercise), :class => "button" %>
    <%= link_to 'Destroy', exercise, :confirm => 'Are you sure?', :method => :delete, :class => "button" %>
  <% end %>
</div>
