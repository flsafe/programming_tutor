<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Text</th>
    <th>Tutorial</th>
    <th>Minutes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%= exercise.title %></td>
    <td><%= exercise.description %></td>
    <td><%= exercise.text %></td>
    <td><%= exercise.tutorial %></td>
    <td><%= exercise.minutes %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to 'Destroy', exercise, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

